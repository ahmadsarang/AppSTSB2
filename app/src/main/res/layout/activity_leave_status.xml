<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leave_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="my.com.softlabs.appstsb.LeaveStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:background="@color/emas"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/tvTitleStat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Leave Status"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/hitam"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitleAnnBal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/biru_gelap"
                        android:gravity="center"
                        android:text="Annual Balance"
                        android:textAlignment="center"
                        android:textColor="@color/putih"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBalAnnual"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/biru"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/putih"
                        android:textSize="40sp"
                        tools:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitleAnnEnt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/kelabu_gelap"
                        android:gravity="center"
                        android:text="Annual Entitle"
                        android:textAlignment="center"
                        android:textColor="@color/putih"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEntAnnual"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/kelabu"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/biru"
                        android:textSize="40sp"
                        tools:layout_gravity="center" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/header_details"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:background="@color/emas"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitleHis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Leave History"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/hitam"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/biru_gelap"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitleDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date/Time"
                        android:textAlignment="center"
                        android:textColor="@color/putih"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTitlePend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textAlignment="center"
                        android:textColor="@color/putih"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lvLeaveStat"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:layout_gravity="center"
                    android:background="@color/biru_pekat"
                    android:dividerHeight="1dp"
                    android:footerDividersEnabled="false"
                    android:foregroundGravity="center"
                    android:headerDividersEnabled="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
